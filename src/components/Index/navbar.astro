<!-- Navbar que está debajo del hero y se pega arriba al hacer scroll -->
<nav id="navbar" class="sticky top-0 z-50 w-full">
    <!-- Container para los dos navbars -->
    <div class="relative">
        <!-- Navbar normal (cuando NO está pegado) -->
